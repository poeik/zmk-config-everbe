// Both halves use this file so the specific `everbe_*.overlay` need to import
// it. 
// It defines:
// - kscan: which GPIO pins ZMK uses to listen to keyboard events
// - matrix_transform: acts as a bridge between GPIO pins and keyboard layout
// - physical_layout
#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        /* zmk,matrix_transform = &default_transform; */
    };

    // physical layout generated by https://zmk-physical-layout-converter.streamlit.app/
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default";

        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100  100   40       0     0     0>
            , <&key_physical_attrs 100 100  200   40       0     0     0>
            , <&key_physical_attrs 100 100  300   20       0     0     0>
            , <&key_physical_attrs 100 100  400    0       0     0     0>
            , <&key_physical_attrs 100 100  500   20       0     0     0>
            , <&key_physical_attrs 100 100  600   40       0     0     0>
            , <&key_physical_attrs 100 100 1000   40       0     0     0>
            , <&key_physical_attrs 100 100 1100   20       0     0     0>
            , <&key_physical_attrs 100 100 1200    0       0     0     0>
            , <&key_physical_attrs 100 100 1300   20       0     0     0>
            , <&key_physical_attrs 100 100 1400   40       0     0     0>
            , <&key_physical_attrs 100 100 1500   40       0     0     0>
            , <&key_physical_attrs 100 100    0  140       0     0     0>
            , <&key_physical_attrs 100 100  100  140       0     0     0>
            , <&key_physical_attrs 100 100  200  140       0     0     0>
            , <&key_physical_attrs 100 100  300  120       0     0     0>
            , <&key_physical_attrs 100 100  400  100       0     0     0>
            , <&key_physical_attrs 100 100  500  120       0     0     0>
            , <&key_physical_attrs 100 100  600  140       0     0     0>
            , <&key_physical_attrs 100 100 1000  140       0     0     0>
            , <&key_physical_attrs 100 100 1100  120       0     0     0>
            , <&key_physical_attrs 100 100 1200  100       0     0     0>
            , <&key_physical_attrs 100 100 1300  120       0     0     0>
            , <&key_physical_attrs 100 100 1400  140       0     0     0>
            , <&key_physical_attrs 100 100 1500  140       0     0     0>
            , <&key_physical_attrs 100 100 1600  140       0     0     0>
            , <&key_physical_attrs 100 100    0  240       0     0     0>
            , <&key_physical_attrs 100 100  100  240       0     0     0>
            , <&key_physical_attrs 100 100  200  240       0     0     0>
            , <&key_physical_attrs 100 100  300  220       0     0     0>
            , <&key_physical_attrs 100 100  400  200       0     0     0>
            , <&key_physical_attrs 100 100  500  220       0     0     0>
            , <&key_physical_attrs 100 100  600  240       0     0     0>
            , <&key_physical_attrs 100 100 1000  240       0     0     0>
            , <&key_physical_attrs 100 100 1100  220       0     0     0>
            , <&key_physical_attrs 100 100 1200  200       0     0     0>
            , <&key_physical_attrs 100 100 1300  220       0     0     0>
            , <&key_physical_attrs 100 100 1400  240       0     0     0>
            , <&key_physical_attrs 100 100 1500  240       0     0     0>
            , <&key_physical_attrs 100 100 1600  240       0     0     0>
            , <&key_physical_attrs 100 100    0  340       0     0     0>
            , <&key_physical_attrs 100 100  100  340       0     0     0>
            , <&key_physical_attrs 100 100  200  340       0     0     0>
            , <&key_physical_attrs 100 100  300  320       0     0     0>
            , <&key_physical_attrs 100 100  400  300       0     0     0>
            , <&key_physical_attrs 100 100  500  320       0     0     0>
            , <&key_physical_attrs 100 100  600  340       0     0     0>
            , <&key_physical_attrs 100 100 1000  340       0     0     0>
            , <&key_physical_attrs 100 100 1100  320       0     0     0>
            , <&key_physical_attrs 100 100 1200  300       0     0     0>
            , <&key_physical_attrs 100 100 1300  320       0     0     0>
            , <&key_physical_attrs 100 100 1400  340       0     0     0>
            , <&key_physical_attrs 100 100 1500  340       0     0     0>
            , <&key_physical_attrs 100 100 1600  340       0     0     0>
            , <&key_physical_attrs 100 100  100  440       0     0     0>
            , <&key_physical_attrs 100 100  200  440       0     0     0>
            , <&key_physical_attrs 100 100  300  420       0     0     0>
            , <&key_physical_attrs 100 100  650  440    4500   650   440>
            , <&key_physical_attrs 100 100  800  620   15000   800   620>
            , <&key_physical_attrs 100 100  950  540    3000   950   540>
            , <&key_physical_attrs 100 100 1050  440    4500  1050   440>
